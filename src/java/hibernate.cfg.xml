<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shop_online?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123</property>
    <property name="show_sql">true</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <mapping resource="entity/UserRole.hbm.xml"/>
    <mapping resource="entity/Product.hbm.xml"/>
    <mapping resource="entity/ShopUser.hbm.xml"/>
    <mapping resource="entity/SubCategory.hbm.xml"/>
    <mapping resource="entity/DelivaryCost.hbm.xml"/>
    <mapping resource="entity/Category.hbm.xml"/>
    <mapping resource="entity/ProOrderDetails.hbm.xml"/>
    <mapping resource="entity/ProOrder.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
